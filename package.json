{
  "name": "shshifter",
  "description": "New YUI build tool based on Gearjs, so let's shift some gears",
  "author": "Dav Glass <davglass@gmail.com>",
  "version": "0.5.5",
  "dependencies": {
    "ansi-color": "*",
    "chalk": "^0.5.1",
    "cpr": "~0.0.6",
    "cssproc": "~0.0.1",
    "gear": "~0.8.0",
    "gear-lib": "~0.8.0",
    "istanbul": "0.1.37",
    "jshint": "2.5.6",
    "log-symbols": "^1.0.1",
    "mkdirp": "*",
    "nopt": "*",
    "progress": "~0.1.0",
    "rimraf": "*",
    "string-length": "^1.0.0",
    "text-table": "^0.2.0",
    "timethat": "~0.0.1",
    "walkdir": "~0.0.5",
    "watch": "~0.8.0",
    "wflint": "0.0.2",
    "which": "*",
    "yuglify": "~0.1.0",
    "yui-lint": "~0.2.0",
    "yuicompressor": "2.4.7",
    "yuitest-coverage": ">=0.0.5"
  },
  "devDependencies": {
    "selleck": "*",
    "vows": "*"
  },
  "keywords": [
    "builder",
    "gearjs",
    "yui",
    "yuilibrary",
    "cli"
  ],
  "main": "./lib/index.js",
  "bin": {
    "shshifter": "./bin/shifter"
  },
  "scripts": {
    "pretest": "jshint --config ./node_modules/yui-lint/jshint.json ./lib/ ./lib/tasks/",
    "test": "istanbul cover --print both vows -- --spec ./tests/*.js",
    "docs": "node scripts/versions.js; node ./node_modules/.bin/selleck --out ./output"
  },
  "preferGlobal": "true",
  "bugs": {
    "url": "http://github.com/wf2/shifter/issues"
  },
  "licenses": [
    {
      "type": "BSD",
      "url": "https://github.com/wf2/shifter/blob/master/LICENSE"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wf2/shifter.git"
  }
}
